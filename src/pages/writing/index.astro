---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('writing')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing | ${SITE_TITLE}`} description="Essays on systems architecture, platform decisions, and technical trade-offs." />
		<style>
			ul {
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				margin-bottom: 2rem;
			}
			.title {
				margin: 0 0 0.25rem 0;
				color: rgb(var(--black));
				line-height: 1.3;
			}
			.title a {
				text-decoration: none;
			}
			.title a:hover {
				color: rgb(var(--accent));
			}
			.description {
				margin: 0 0 0.25rem 0;
				color: rgb(var(--gray-dark));
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.875rem;
			}
			.empty {
				color: rgb(var(--gray));
				font-style: italic;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Writing</h1>
			{posts.length === 0 ? (
				<p class="empty">No posts yet.</p>
			) : (
				<ul>
					{posts.map((post) => (
						<li>
							<h3 class="title">
								<a href={`/writing/${post.id}/`}>{post.data.title}</a>
							</h3>
							<p class="description">{post.data.description}</p>
							<p class="date"><FormattedDate date={post.data.pubDate} /></p>
						</li>
					))}
				</ul>
			)}
		</main>
		<Footer />
	</body>
</html>
